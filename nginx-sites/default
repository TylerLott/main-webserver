server {
        root /home/ubuntu/personal-website/resume-website/build;
        index index.html;
        server_name tyler-lott.com www.tyler-lott.com;

        location / {
                include proxy_params;
                proxy_pass http://localhost:3000;
        }

        location /work-innov/ {
                include proxy_params;
                proxy_pass http://localhost:4000/;
        }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/tyler-lott.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/tyler-lott.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot


}
server {
    if ($host = www.tyler-lott.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    if ($host = tyler-lott.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


        listen 80;
        server_name tyler-lott.com www.tyler-lott.com;
    return 404; # managed by Certbot




}
